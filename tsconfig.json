{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/firebase": ["firebase", "firebase/index"]
    }
  },
  "include": [
    "app", "src", "components", "hooks", "types",
    "**/*.ts", "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
